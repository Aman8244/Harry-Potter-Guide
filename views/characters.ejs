        <button style="background-color: #740001;color: #d3a625;" type="submit" class="btn">go</button>
    </form><br><br><br>
    <div>
        <% characters.forEach((element)=>{ %>
        <% if(element.image_url === null) {

        } else { %>
        <div class="card char-cards" style="width: 30%;display: inline-block;"><img src=<%= element.image_url %> class="card-img-top" alt="">
            <div class="card-body">
                <h3 class="card-title">
                   <%= element.name %>
                </h3>
            
        </div></div>
        <% } }) %>
    </div>
